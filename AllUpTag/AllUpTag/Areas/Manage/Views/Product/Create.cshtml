@model Product
<div class="container-fluid align-items-center justify-content-between row">
    <h1>Create Page</h1>
    <a asp-action="index" asp-controller="product" class="btn btn-primary">Go Back</a>
</div>
<div class="container-fluid">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Code</label>
                <input asp-for="Code" type="text" class="form-control">
                <span asp-validation-for="Code"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" type="text" class="form-control">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Tax</label>
                <input asp-for="Tax" type="text" class="form-control">
                <span asp-validation-for="Tax"></span>
            </div>
            <div class="form-group col-md-3">
                <label>CostPrice</label>
                <input asp-for="CostPrice" type="text" class="form-control">
                <span asp-validation-for="CostPrice"></span>
            </div>
            <div class="form-group col-md-3">
                <label>SalePrice</label>
                <input asp-for="SalePrice" type="text" class="form-control">
                <span asp-validation-for="SalePrice"></span>
            </div>
            <div class="form-group col-md-3">
                <label>DiscountedPrice</label>
                <input asp-for="DiscountedPrice" type="text" class="form-control">
                <span asp-validation-for="DiscountedPrice"></span>
            </div>
            <div class="form-group col-md-3">
                <label>Brand</label>
                <input asp-for="Brand" type="text" class="form-control">
                <span asp-validation-for="Brand"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="TagIds">BookTag</label>
            <select asp-for="TagIds" class="form-select col-md-2" aria-label="Default select example"
                    asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
            </select>
            <span asp-validation-for="TagIds"></span>

            <div class="form-group col-md-2">
                <div class="form-check">
                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        IsAvailable
                    </label>
                    <span asp-validation-for="IsAvailable"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>