@model List<Genre>
@{
    var counter = 0;
}
<div class="container-fluid justify-content-between align-items-center row">
    <h1>Genre Page</h1>
    <a asp-action="create" asp-controller="genre" class="btn btn-primary">Create</a>

    <div class="container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@genre.Name</td>
                        <td>
                            <a asp-action="update" asp-controller="genre" asp-route-id="@genre.Id" class="btn btn-success">Update</a>
                            <a asp-action="delete" asp-controller="genre" asp-route-id="@genre.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

